<ul class="expanded-subjects-list">
  <% subjects.each do |section| %>
  <li>
    <h5><%= section.name %></h5>
        <dl>
          <dt><%= section.abbreviation %></dt>
          <dd><%= link_to section.name, add_user_subject_path(section), :method => :put %></dd>
          <% section.subjects.each do |sub| %>
            <dt><%= sub.abbreviation %></dt>
            <% if params[:my_files] %>
              <dd><%= link_to sub.name, add_user_subject_path(sub), :method => :put %></dd>
            <% else %>
              <dd><%= link_to univer.name, "", :class => "modal-filter univer-filter" %></dd>
            <% end %>
          <% end %>
        </dl>
  </li>
  <% end %>
</ul>

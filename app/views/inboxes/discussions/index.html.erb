<% current_user.all_senders.each do |sender| %>
  <%= sender.name %>
  <%= current_user.sender_messages(sender).count %> <%= t(:message, :count => current_user.sender_messages(sender).count) %>
  <%= link_to "Профиль пользователя", user_path(sender) %>
<% end %>

<%= form_for Message.new, :url => discussion_messages_path(current_user.last_descussion.id) do |f| %>
  <%= f.label :body, "Ваше сообщение" %>
  <%= f.text_area :body %>

  <%= f.submit "Отправить" %>
<% end %>


<%= form_for @file,  :url => document_path(@file.id), :html => { :multipart => true, :method => :put } do |f| %>
  <fieldset class="column span-18">
    <p class="column span-14">
      <%= f.label :name, "Имя файла" %>
      <%= f.text_field :name  %>
    </p>
    <p class="column span-14">
      <%= f.label :description, "Описание файла" %>

      <%= f.text_field :description %>
    </p>
    <p class="column prepend-6 span-8">

      <button type="submit" class="btn primary" title="Сохранить">Сохранить</button>
    </p>
  </fieldset>
<% end %>

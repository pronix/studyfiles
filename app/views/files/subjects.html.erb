<%= render :partial => "search" %>

<% @subjects.each do |subject| %>
    <div class="expander parent">
           <div class="expander-header university">
             <a class="blue-collapse icon expand"></a>
             <a href="#" class="icon flag2"></a>
             <h4>
               <a href="#"><%= subject.name %></a>
             </h4>
             <div class="expander-actions">
               <%= link_to "", "", :class => "expand-all expand icon" %>
             </div>
           </div>

           <div class="expander-content node">
              <div class="level-1 clearfix node">
                <% subject.folders.top.order(@sort).each do |folder| %>
                  <%= render "shared/folder", :folder => folder, :sort => @sort %>
                <% end %>
                <% subject.documents.unfolded.order(@sort).each do |doc| %>
                  <%= render 'shared/file_row', :document => doc %>
                <% end %>
              </div>
           </div>
    </div>
<% end %>

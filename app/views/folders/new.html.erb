<%= form_for @folder,  :url => folders_path, :html => { :multipart => true, :method => :post } do |f| %>
  <fieldset class="column span-18">
    <p class="column span-14">
      <%= f.label :name, "Имя Папки" %>
      <%= f.text_field :name, :id => 'name' %>
    </p>
    <p class="column span-14">
      <%= f.label :description, "Описание папки" %>

      <%= f.text_field :description %>
    </p>
    <%= f.hidden_field :user_id, :value => current_user.id %> 
    <p class="column prepend-6 span-8">

      <button type="submit" class="btn primary" title="Создать папку">Создать</button>
    </p>
  </fieldset>
<% end %>
<div class="search-form">
  <div class="search-right-form">
    <div class="search-form-body">
      <div class="search-word">
        <%= t("search") %>
      </div>
      <div class="search-form">
        <%= form_tag universities_path, :method => :get do %>
            <%= text_field_tag :search, params[:search], :placeholdr =>  "Введите название ВУЗа или предмета", :id => "search" %>
          <button id="search_button">
            &nbsp;
          </button>
        <% end %>
        <div class="search-statistic">
          <%= search_statistic %>
        </div>
      </div>
    </div>
  </div>
</div>

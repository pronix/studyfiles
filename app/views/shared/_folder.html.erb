<%= folder.name %> | <%= link_to "Скачать", download_folder_path(folder) %>
<ul>
  <% folder.children.each do |node_folder| %>
    <li>
      <%= render "shared/folder", :folder => node_folder %>
    </li>
  <% end %>
</ul>
<ul>
  <% folder.documents.each do |document| %>
    <li><%= link_to truncate(document.name, :length => 42, :omission => ""), document.item.url  %></li>
  <% end %>
</ul>


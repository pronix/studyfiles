<div id="user-bar" class="login-bar clearfix">

    <span>
        <big><%= user_name %></big>
        &nbsp;&nbsp;/&nbsp;&nbsp;
        <%= link_to current_user.documents.count, user_path(current_user) %>
    </span>

    <span id="inbox-notify" class="has-messages">
      <% if current_user.unread_message_count.present? %>
	<%= link_to "#{current_user.unread_message_count} #{t(:message, :count => current_user.unread_message_count)}", discussions_path, :title => "Личные сообщения" %></li>
      <% else %>
	<%= link_to "0 #{t(:message, :count => 0)}", discussions_path, :title => "Личные сообщения" %></li>
      <% end %>
    </span>


    <span>
      <%= link_to "Настройки", edit_account_path %>
      &nbsp;&nbsp;/&nbsp;&nbsp;
      <%= link_to "Выйти", destroy_user_session_path, :method => :delete %>
    </span>

    <span class="ub-right">
      <%= link_to t("help"), faqs_path %>
      &nbsp;&nbsp;/&nbsp;&nbsp;
      <%= link_to t("novelties"), novelties_path %>
    </span>

    <span class="ub-right my-universities-names">
      Мой ВУЗ:
      <% current_user.universities.each do |univer| %>
        <%= link_to univer.abbreviation, documents_path(:university => univer) %>
      <% end %>
    </span>
</div>

<% top_users = User.all.sort{ |a,b| b.raiting <=> a.raiting }.first(10) %>
<% top_universities = University.all.sort{ |a,b| b.rating <=> a.rating }.first(10) %>
<div class="salat-box">
  <% if current_user %>
    <%= link_to "", new_user_document_path(current_user), :class => "add-file-button" %>
  <% else %>
    <%= link_to "", new_user_session_path, :class => "add-file-button" %>
  <% end %>
</div>

<%= render "shared/news", :news => Novelty.main %>

<!-- TOPS BLOCK START -->
<div class="top-10">
  <h3>Top 10</h3>

    <div id="tops-tabs">
        <ul>
          <li>
            <a href="#users-top" >Пользователей</a>
          </li>
          <li>
            <a href="#universities-top">ВУЗов</a>
          </li>
        </ul>

        <div id="users-top">
              <ul>
                <% top_users.each do |user| %>
                  <li>
                    <%= link_to user_name(user), user_path(user) %>
                    <div class="user-rait">
                      <span><%= user.raiting %></span>
                    </div>
                  </li>
                <% end %>
              </ul>
              <div class="userc-count">
                <%= link_to "Всего пользователей", users_path %>
                <%= User.count %>
              </div>
        </div>

        <div id="universities-top">
              <ul>
                <% top_universities.each do |univer| %>
                  <li>
                    <%= link_to univer.name, university_folders_path(univer) %>
                    <div class="user-rait">
                      <span><%= univer.rating %></span>
                    </div>
                  </li>
                <% end %>
              </ul>
              <div class="userc-count">
                <%= link_to "Всего университетов", universities_path %>
                <%= University.count %>
              </div>
        </div>
    </div>

</div>
<!-- TOPS BLOCK END -->

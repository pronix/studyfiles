<% if can?(:manage, document) && current_page?(:controller => "users", :action => "show", :id => current_user.id) %>
    <%= link_to "", edit_document_path(document), :class => "edit icon", :title => "Редактировать #{document.name}", :remote => true %>
  <% end %>
  <%= link_to "", download_document_path(document), :class => "download icon", :title => "Скачать #{document.name}" %>
  <% if can?(:manage, document) && current_page?(:controller => "users", :action => "show", :id => current_user.id) %>
    <%= link_to "", document_path(document), :class => "dred-cross icon", :title => "Удалить#{document.name}", :method => :delete %>
  <% end %>
</span>
<% if document.has_preview? %>
  <%= link_to truncate(document.name, :length => 42, :omission => ""), document_path(document),
      :title => "Предпросмотр #{document.name}", :class => "popup-preview" %>
<% else %>
  <%= link_to truncate(document.name, :length => 42, :omission => ""), download_document_path(document) %>
<% end %>



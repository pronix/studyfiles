<%= form_for Message.new, :url => discussions_path do |f| %>
  Получатель: <%= @recipient.name.present? ? @recipient.name : 'Имя не указанно' %>
  <%= hidden_field_tag 'recipient_id', params[:id] %>
  <%= f.label :body, "Ваше сообщение" %>
  <%= f.text_area :body, :rows => 8, :cols => 50 %>

  <%= f.submit "Отправить", :class => "button blue-button" %>
<% end %>
